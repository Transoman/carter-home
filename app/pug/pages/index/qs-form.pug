section.qs-form
  .container
    .qs-form__wrap
      form.qs-form__form.form(action="#")
        .form-group
          .qs-form__form-select
            button(type="button").form__field
              +icon('search', 'qs-form__form-select-icon')
              | Search by City or ZIP Code
            .qs-form__form-dropdown
              .qs-form__form-dropdown-search
                input(type="text").form__field
        .form-group
          select(name="beds").form__field.form__field--select
            option Beds
            option(value="1") 1+
            option(value="2") 2+
            option(value="3") 3+
            option(value="4") 4+
            option(value="5") 5+
        .form-group
          select(name="baths").form__field.form__field--select
            option Baths
            option(value="1") 1+
            option(value="2") 2+
            option(value="3") 3+
            option(value="4") 4+
            option(value="5") 5+
        .form-group
          select(name="min_price").form__field.form__field--select
            option Min Price
            option(value="100000") 100,000+
            option(value="200000") 200,000+
            option(value="300000") 300,000+
            option(value="400000") 400,000+
            option(value="500000") 500,000+
        .form-group
          select(name="max_price").form__field.form__field--select
            option Max Price
            option(value="100000") 100,000+
            option(value="200000") 200,000+
            option(value="300000") 300,000+
            option(value="400000") 400,000+
            option(value="500000") 500,000+
        .form-group
          button(type="submit").btn.btn--black.form__btn Search
